<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jaxrs="http://cxf.apache.org/jaxrs"
       xsi:schemaLocation="
         http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
         http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd">

    <jaxrs:server id="marvelService" address="/">

        <jaxrs:serviceBeans>
            <bean id="aliasServiceBean" class="es.ies.puerto.servicio.AliasServicio"/>
            <bean id="equipamientoServiceBean" class="es.ies.puerto.servicio.EquipamientoServicio"/>
            <bean id="personajeServiceBean" class="es.ies.puerto.servicio.PersonajeServicio"/>
            <bean id="poderServiceBean" class="es.ies.puerto.servicio.PoderServicio"/>
        </jaxrs:serviceBeans>

        <jaxrs:providers>
            <bean class="com.fasterxml.jackson.jaxrs.json.JacksonJsonProvider"/>
        </jaxrs:providers>
    </jaxrs:server>
</beans>